{
  "name": "@sonatype/react-shared-components",
  "version": "10.0.7",
  "description": "Sonatype shared UI components and utilities written in React",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sonatype/sonatype-react-shared-components.git",
    "directory": "lib"
  },
  "scripts": {
    "build": "npm-run-all -p lint compile-ts compile-scss copy-scss copy-package-json copy-assets",
    "watch": "npm-run-all -p lint compile-ts-watch compile-scss-watch copy-scss-watch copy-package-json-watch copy-assets-watch",
    "lint": "eslint --ignore-pattern __tests__ --ignore-pattern __mocks__ --ignore-pattern __testutils__ \"./src/**/*.{js,ts}{,x}\"",
    "lint-tests": "eslint --no-eslintrc -c .eslintrc-tests \"./src/**/{__tests__,__mocks__,__testutils__}/**/*.{js,ts}{,x}\"",
    "compile-ts": "tsc --project tsconfig.build.json",
    "compile-scss": "webpack-cli --config=webpack.config.styles.js",
    "copy-scss": "cpx \"src/**/*.scss\" dist",
    "copy-assets": "cpx \"src/assets/**/*\" dist/assets",
    "copy-package-json": "cpx package.json dist",
    "compile-ts-watch": "tsc -w --project tsconfig.build.json",
    "compile-scss-watch": "webpack-cli --watch --config=webpack.config.styles.js",
    "copy-scss-watch": "cpx -w \"src/**/*.scss\" dist",
    "copy-assets-watch": "cpx -w \"src/assets/**/*\" dist/assets",
    "copy-package-json-watch": "cpx -w package.json dist",
    "test": "npm-run-all lint-tests jest",
    "jest": "jest",
    "test-watch": "jest --watch",
    "test-watch-debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watchAll",
    "clean": "rimraf dist junit.xml",
    "version": "versync -b sync -a"
  },
  "author": "Sonatype, Inc.",
  "license": "EPL-2.0",
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.20",
    "@types/react": "^16.0.0",
    "@types/react-dom": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "cpx": "^1.5.0",
    "css-loader": "^6.7.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.17.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.22.0",
    "file-loader": "^6.2.0",
    "ignore-emit-webpack-plugin": "^2.0.6",
    "jest": "^26.6.3",
    "jest-enzyme": "^7.1.2",
    "jest-junit": "^12.0.0",
    "mini-css-extract-plugin": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "resolve-url-loader": "^5.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.37.5",
    "sass-loader": "^12.6.0",
    "source-map-loader": "^3.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^9.2.8",
    "typescript": "~4.5.5",
    "versync": "^5.0.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@material-ui/core": "^4.11.2",
    "@react-hook/merged-ref": "^1.3.0",
    "@react-hook/resize-observer": "^1.2.5",
    "@rooks/use-mutation-observer": "^4.11.0",
    "@sonatype/react-commonmark": "^3.0.1",
    "@types/classnames": "^2.2.11",
    "@types/prop-types": "^15.7.3",
    "@types/ramda": "^0.27.64",
    "classnames": "^2.2.6",
    "fuse.js": "^6.4.6",
    "prop-types": "^15.7.2",
    "ramda": "^0.28.0"
  },
  "peerDependencies": {
    "react": "^16.10.1",
    "react-dom": "^16.10.1"
  },
  "versionedSources": [
    "../gallery/package.json"
  ],
  "sideEffects": [
    "index.js",
    "*.scss"
  ],
  "resolutions": {
    "jest-environment-jsdom": "26.6.2"
  }
}
